# -*- sh -*-
#
# normalscreenrc for mmoa
# Last edited Fri Nov 24 10:14:05 EET 2000

#set DISPLAY
#setenv DISPLAY :0.0

sessionname terminal

# Functionkeys select corresponding window
bindkey -k k1 select 1
bindkey -k k2 select 2
bindkey -k k3 select 3
bindkey -k k4 select 4
bindkey -k k5 select 5
bindkey -k k6 select 6
bindkey -k k7 select 7
bindkey -k k8 select 8
bindkey -k k9 select 9
bindkey -k k; select 10
bindkey -k F1 prev
bindkey -k F2 next
#bindkey -k F1 select 11
#bindkey -k F2 select 12

defescape 'p'
defflow off
escape 'p'
msgminwait 2
msgwait 3
defshell -/usr/bin/zsh
startup_message off
defscrollback 1000
altscreen off
screen -t Midas		0 zsh -l
screen -t eMail		1 zsh -l
screen -t eNews		2 zsh -l
screen -t ssh		3 zsh -l
screen -t Merope	4 ssh mmoa@narvi-admin
screen -t Merope-install	5 ssh mmoa@narvi-install
screen -t Merope-admin		6 zsh -l
#screen -t loki		7 ssh loki
screen -t Irssi		8 zsh -l
#screen -t Compiler	9 ssh kataja
screen -t RaspBerry	10 zsh -l

# layouts
layout autosave on
# layout new one
# select 1
# layout attach one
# layout select one

# Tweaking terminal settings
backtick 1 5 5 true
#termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
hardstatus string "screen (%n: %t)"
caption string "%{= kw}%Y-%m-%d;%c %{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1`"
caption always

#defcl off
defutf8 on
term xterm-256color

# Enable scrollback buffer in xterm
termcapinfo xterm* ti@:te@

