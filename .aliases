alias date2="date '+%A %d. %B %Y (viikko %V)'"
alias j='jobs'
alias l='less -iMqrwX'
alias lalias='source ~/.aliases'
alias pd='popd'
alias ps2='ps -o pid,ppid,user,nice,vsz,rss,time,stime,pmem,pcpu,args'
[[ -x /usr/sbin/sestatus ]] && alias sudo='sudo -t unconfined_t -r unconfined_r' 
function mcd() {mkdir $1 && cd $1}
function precmd () { printf "\033k%s@%s:%s\033\\" "${USER}" "${HOSTNAME%%.*}" "${PWD/#$HOME/~}" }
alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

