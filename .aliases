alias OS="openstack"
export AKA=/home/manttila/src/ops/aka ACB=/home/manttila/src/ops/acb
function akassh () {
    pushd -q ${AKA}
    ssh -o "SetEnv TERM=xterm-256color" -F ssh.config $*
    popd
}
function acbssh () {
    pushd -q ${ACB}
    ssh -o "SetEnv TERM=xterm-256color" -F ssh.config $*
    popd
}
alias battery='printf "%.2f%%\n" $(((`cat /sys/class/power_supply/BAT0/charge_now`/`cat /sys/class/power_supply/BAT0/charge_full`.0)*100))'
