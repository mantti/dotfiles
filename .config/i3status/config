order += "battery 1"
order += "disk /"
#order += "run_watch DHCP"
order += "path_exists VPN"
#order += "wireless wlp2s0"
order += "wireless wlo1"
order += "ethernet eno2"
order += "cpu_temperature 8"
order += "cpu_temperature 5"
order += "load"
order += "tztime local"
order += "tztime helsinki"

wireless wlo1 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet eno2 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 1 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
	path = "/sys/class/net/vpn0/operstate"
#        path = "/proc/sys/net/ipv4/conf/vpn0"
#        format = "up"
#        format_down = "down"
}

tztime local {
        format = "%Y-%m-%d %a v.%V %H:%M:%S"
}

tztime Helsinki {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Helsinki"
}

load {
        format = "L: %5min"
}

cpu_temperature 8 {
        format = "T: %degrees Â°C"
        path = "/sys/class/thermal/thermal_zone8/temp"
}

cpu_temperature 5 {
        format = "T: %degrees Â°C"
        path = "/sys/class/thermal/thermal_zone5/temp"
}
disk "/" {
        format = "%free"
}

